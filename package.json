{
  "private": true,
  "name": "refile",
  "version": "0.5.1",
  "main": "lib/index.js",
  "repository": "git@github.com/BlackGlory/refile.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "jest --runInBand --no-cache --config jest.config.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --runInBand --coverage --config jest.config.js",
    "dev": "nodemon",
    "dev:http2": "cross-env REFILE_HTTP2=true nodemon",
    "clean": "rimraf lib",
    "build": "run-s build:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:patch": "tscpaths --project tsconfig.build.json --src ./src --out ./lib",
    "start": "node lib/index.js",
    "start:pm2": "pm2 start lib/index.js --name 'refile' --wait-ready",
    "start:http2": "cross-env REFILE_HTTP2=true node lib/index.js",
    "docker:build": "docker build --tag refile .",
    "docker:test": "docker-compose --file docker-compose.test.yml run --rm test",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s lint build test",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@blackglory/http-status": "^1.0.0",
    "@blackglory/jest-matchers": "^0.1.21",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/accepts": "^1.3.5",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^7.4.0",
    "@types/busboy": "^0.2.4",
    "@types/jest": "^27.0.2",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "16.10.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "domexception": "^2.0.1",
    "eslint": "^8.0.1",
    "extra-fetch": "^1.8.1",
    "extra-request": "^3.0.1",
    "extra-response": "^0.3.7",
    "husky": "4",
    "jest": "^27.2.5",
    "jest-extended": "^1.0.0",
    "jest-json-schema": "^5.0.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^7.0.1",
    "pm2": "^5.1.2",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.7",
    "@blackglory/errors": "^1.1.2",
    "@blackglory/go": "^0.1.0",
    "@blackglory/types": "^0.5.1",
    "app-root-path": "^3.0.0",
    "better-sqlite3": "^7.4.3",
    "dotenv": "^10.0.0",
    "extra-filesystem": "^0.3.10",
    "extra-generator": "^0.2.11",
    "extra-promise": "^0.19.0",
    "extra-tags": "^0.2.2",
    "fastify": "^3.22.0",
    "fastify-accepts": "^2.1.0",
    "fastify-bearer-auth": "^6.0.0",
    "fastify-cors": "^6.0.2",
    "fastify-metrics": "^8.0.0",
    "fastify-multipart": "^5.0.2",
    "fetch-blob": "2.1.1",
    "iterable-operator": "^0.14.3",
    "justypes": "^0.1.6",
    "migrations-file": "^0.1.10",
    "prom-client": "^14.0.0",
    "return-style": "^0.12.3",
    "split-hash": "^0.1.2",
    "value-getter": "^0.2.1"
  }
}
