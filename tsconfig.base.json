{
  "compilerOptions": {
    "target": "ES2020"
  , "module": "CommonJS"
  , "strict": true
  , "baseUrl": "."
  , "paths": {
      "@src/*": ["src/*"]
    , "@test/*": ["__tests__/*"]
    , "@service/*": ["src/service/*"]
    , "@adapter/*": ["src/adapter/*"]
    }
  , "allowJs": true
  , "maxNodeModuleJsDepth": 1
  , "esModuleInterop": true
  }
}
